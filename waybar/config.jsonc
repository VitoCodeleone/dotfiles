{
  "include": "modules.jsonc",

  "style": "style.css",
  "layer": "top",
  "position": "top",
  "height": 30,

  
  "modules-left": ["custom/launcher", "hyprland/workspaces", "custom/cava"],
  "modules-center": ["memory", "cpu", "temperature"],
  "modules-right": ["battery", "pulseaudio", "network", "clock"],

  "clock": {
    "format": "{:%a %b %d %H:%M}"
  },
  "cpu": {
    "format": "CPU: {usage}%"
  },
  "memory": {
    "format": "RAM: {used} / {total} GB"
  },
  "battery": {
    "format": "{capacity}% {icon}"
  },
  "pulseaudio": {
    "format": "{volume}% {icon}",
    "format-muted": "Muted"
  },
  "network": {
    "format-wifi": "{essid} ({signalStrength}%)",
    "format-ethernet": "{ifname}: {ipaddr}/{cidr}",
    "format-disconnected": "Disconnected"
  }
}

